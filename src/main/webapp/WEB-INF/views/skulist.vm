#set($firstMenu=2)
#set($secondMenu=1)
<div id="content">
    <!--breadcrumbs-->
    <div id="content-header">
        <div id="breadcrumb">
            <a href="/user/index" title="首页" class="tip-bottom"><i class="icon-home"></i>首页</a>
            <a href="/sku/list" title="商品列表" class="tip-bottom"><i class="icon-home"></i>商品列表</a>
        </div>
    </div>
    <!--End-breadcrumbs-->

    <!--Action boxes-->
    <div class="container-fluid">
        <div class="widget-box">
            <div class="widget-title"><span class="icon"><i class="icon-th"></i></span>
                <h5>动漫周边商品商城</h5>
            </div>
            <div class="widget-content nopadding">
                <table class="table table-bordered data-table">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>产品名称</th>
                        <th>展示图</th>
                        <th>产品介绍</th>
                        <th>产品价格</th>
                        <th>库存</th>
                        <th>产品录入时间</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody id="skuTable">
                        #foreach($!vo in $!list)
                        <tr>
                            <td>$!vo.id</td>
                            <td>
                                $!vo.name
                            </td>
                            <td>
                                $!vo.picUrl
                            </td>
                            <td>$!vo.description</td>
                            <td>$!vo.price</td>
                            <td>$!vo.num</td>
                            <td>$!dateTool.format('yyyy-MM-dd HH:mm:ss',$!vo.ctime)</td>
                            <td>
                                <button type="button" class="btn btn-success" data-id="$!vo.id">
                                   收藏
                                </button>
                                <a href="/order/toSave/$!vo.id" class="btn btn-danger">
                                   下单
                                </a>
                            </td>
                        </tr>
                        #end
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- 收藏弹窗 -->
<div class="modal fade" id="skuCollect" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">加入收藏</h4>
      </div>
      <div class="modal-body">
         是否收藏商品
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
        <button id="collectBtn" type="button" class="btn btn-primary" data-id="-1">确认</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    require(['scripts/common/dataTable','scripts/sku'], function () {
    });
</script>