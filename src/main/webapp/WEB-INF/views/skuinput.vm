<div id="content">
    <!--breadcrumbs-->
    <div id="content-header">
        <div id="breadcrumb"> <a href="/index/" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a></div>

    </div>
    <!--End-breadcrumbs-->

    <!--Action boxes-->
    <div class="container-fluid">
        <form action="/sku/save" method="post">
            <div class="form-group">
             <label>名称</label>
             <input id="name" type="text" class="form-control" name="name" placeholder="名称">
            </div>
            <div class="form-group">
             <label>图片URL</label>
             <input type="text" class="form-control" name="picUrl" placeholder="图片URL">
            </div>
            <div class="form-group">
             <label>产品描述</label>
             <textarea placeholder="产品描述" name="description"></textarea>
            </div>
            <div class="form-group">
             <label>价格</label>
             <input type="number" class="form-control" name="price" placeholder="价格">
            </div>
            <div class="form-group">
             <label>库存</label>
             <input type="number" class="form-control" name="num" placeholder="库存">
            </div>
            <div class="form-group">
             <label>状态</label>
             <input type="radio" name="status" value="0"/>下架
             <input type="radio" name="status" value="1" checked/>上架
          </div>

          <div class="form-group">
             <button type="submit" class="btn btn-danger">录入</button>
          </div>
        </form>
    </div>
</div>