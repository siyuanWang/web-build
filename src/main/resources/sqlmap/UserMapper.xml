<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wry.dongman.dao.UserMapper">

    <select id="queryById" resultType="com.wry.dongman.domain.UserEntity">
        select *from user_t where id = #{id}
    </select>

    <select id="queryAll" resultType="com.wry.dongman.domain.UserEntity">
        select id,type,email,name,sex,ctime,utime from user_t order by type desc,ctime
    </select>

    <select id="queryByEmail" resultType="com.wry.dongman.domain.UserEntity">
        select *from user_t where email = #{email}
    </select>

    <insert id="insert" parameterType="com.wry.dongman.domain.UserEntity">
        insert into user_t (type,email,password,name,sex,ctime) values (#{user.type}, #{user.email}, #{user.password}, #{user.name}, #{user.sex}, #{user.ctime})
    </insert>
</mapper>